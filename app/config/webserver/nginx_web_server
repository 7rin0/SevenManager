server {
	
    listen 80;
    listen 443 ssl;

    server_name symfony.sonata;
    root /your/root/Documents/github/projects/symfony-sonata/web;

    #ssl on;
    #ssl_certificate /your/root/Documents/github/symfony-sonata/ssl/cacert.pem;
    #ssl_certificate_key /your/root/Documents/github/symfony-sonata/privkey.pem;

    location / {
        # try to serve file directly, fallback to app.php
        try_files $uri /app.php$is_args$args;
    }

    # This rule should only be placed on your development environment
    # In production, don't include this and don't deploy app_dev.php or config.php
    location ~ ^/(app|app_dev|config|admin|admin_dev)\.php(/|$) {
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;

	    proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;

	    fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;   

        proxy_max_temp_file_size 0;
        fastcgi_max_temp_file_size 0;
    }

    error_log /your/root/Documents/github/logs/symfony_sonata_errors.log warn;
    access_log /your/root/Documents/github/logs/symfony_sonata_access.log;
}
